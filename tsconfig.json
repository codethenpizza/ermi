{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2020",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@actions/*": [
        "actions/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@projTypes/*": [
        "types/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@services/*": [
        "services/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
