{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@actions/*": [
        "actions/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@models/*": [
        "models/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
